<div class="">

  {{#each posts as |post|}}
  <div class="col-md-4 col-lg-10 border border-black">
    <a href="/controllers/homeRoutes.js">
    <h3>
      {{post.title}}
    </h3>
    <p>
      {{post.content}}
    </p>
    <p class="">
      Author:
      {{post.user.username}}
    </p>
    <p>
      Posted on:
      {{ format_date post.createdAt}}
    </p>
    </a>
  </div>
  {{/each}}

</div>
